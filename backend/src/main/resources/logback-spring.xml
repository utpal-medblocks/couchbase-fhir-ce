<configuration>
    <!-- ============================================================= -->
    <!--  GLOBAL NO-STACK-TRACE POLICY                                 -->
    <!-- ============================================================= -->
    <!--  We NEVER output stack traces (any level).                    -->
    <!--  This is enforced by:                                         -->
    <!--    1. Pattern below excludes all exception converters (%ex,   -->
    <!--       %xEx, %rEx, %wEx, etc.) so Logback will not render the  -->
    <!--       stack trace even if a Throwable is passed to the logger.-->
    <!--    2. If someone re‑introduces %ex later, stack traces will   -->
    <!--       immediately reappear. Keep this comment as a guard.     -->
    <!--  If you ever want ONLY the exception class/message (still     -->
    <!--  single line), you can change the pattern to append:          -->
    <!--     | ex="%replace(%xEx{1}){'(?s)(?:\\r?\\n).*',''}"      -->
    <!--  (which trims everything after the first line).               -->
    <!-- ============================================================= -->

    <!-- Central reusable pattern (NO %ex tokens!) -->
    <property name="NO_STACK_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z', UTC} %-5level %msg%n"/>
    
    <!-- Log file locations from environment variables (works both in Docker and locally) -->
    <property name="LOG_FILE" value="${LOGGING_FILE_NAME:-./logs/fhir.log}"/>
    <property name="SDK_LOG_FILE" value="${SDK_LOGGING_FILE_NAME:-./logs/sdk.log}"/>

    <!-- Console appender (12-factor for containers) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${NO_STACK_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for persistent logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${NO_STACK_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- Keep 7 days of history -->
            <maxHistory>7</maxHistory>
            <!-- Cap total log size at 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Separate file appender for Couchbase SDK logs -->
    <appender name="SDK_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SDK_LOG_FILE}</file>
        <encoder>
            <pattern>${NO_STACK_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${SDK_LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Couchbase SDK loggers (performance diagnostics) -->
    <!-- Levels are configured in config.yaml for easy adjustment -->
    <!-- These loggers route SDK logs to separate file (sdk.log) -->
    
    <!-- SDK internal loggers → sdk.log -->
    <logger name="com.couchbase.core" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.client.core" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.client.java" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.io" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.endpoint" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.node" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.transactions" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <logger name="com.couchbase.tracing" additivity="false">
        <appender-ref ref="SDK_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <!-- Application loggers → fhir.log (uses root appenders) -->
    <!-- Levels configured in config.yaml -->
    <!-- These use default routing (FILE + STDOUT from root) -->
    
    <!-- Spring Security and OAuth2 logging (set to ERROR for production, DEBUG for troubleshooting) -->
    <logger name="org.springframework.security" level="ERROR"/>
    <logger name="org.springframework.security.oauth2" level="ERROR"/>
    <logger name="org.springframework.security.oauth2.server.resource" level="ERROR"/>
    <logger name="org.springframework.security.web" level="ERROR"/>
    <logger name="org.springframework.security.web.access" level="ERROR"/>
    
    <!-- Only target the specific noisy classes you mentioned -->
    <logger name="com.couchbase.fhir.repository.service.FhirBundleProcessingService" level="ERROR"/>
    <logger name="com.couchbase.fhir.repository.provider.BundleTransactionProvider" level="ERROR"/>
    <logger name="com.couchbase.admin.controller.service.ConnectionService" level="ERROR"/>

    <!-- Suppress noisy HAPI FHIR parser warnings -->
    <logger name="ca.uhn.fhir.parser.LenientErrorHandler" level="ERROR"/>
    
    <!-- Suppress verbose HAPI FHIR profile loading messages -->
    <logger name="ca.uhn.fhir.context.support.DefaultProfileValidationSupport" level="ERROR"/>

    <!-- Target the specific RestfulServer stack traces you're seeing -->
    <logger name="ca.uhn.fhir.rest.server.RestfulServer" level="OFF"/>
    <!-- Disable HAPI's default exception handler stack traces -->
    <logger name="ca.uhn.fhir.rest.server.interceptor.ExceptionHandlingInterceptor" level="OFF"/>
    
    <!-- Suppress known client disconnection errors -->
    <logger name="org.apache.catalina.connector" level="OFF"/>
    <logger name="org.apache.catalina" level="ERROR"/>
</configuration>